# Backend Environment Configuration
# Copy this file to .env and fill in with your actual credentials

# Jira Configuration
JIRA_DOMAIN=your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_api_token_here

# Grok Configuration (if using Grok as LLM provider)
GROK_API_KEY=xai-your_api_key_here
GROK_MODEL=grok-1
GROK_TEMPERATURE=0.7
GROK_MAX_TOKENS=2000

# Ollama Configuration (if using Ollama as LLM provider)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database
DATABASE_URL=sqlite:///./tp_creator.db

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
ENVIRONMENT=development
